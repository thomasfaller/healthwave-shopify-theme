// FONT
@font-face {
  font-family: 'bc-sf-filter-ico';
  src: url("bc-sf-filter-ico.eot?1fx0d6");
  src: url("bc-sf-filter-ico.eot?1fx0d6#iefix") format('embedded-opentype'), url("bc-sf-filter-ico.ttf?1fx0d6") format('truetype'), url("bc-sf-filter-ico.woff?1fx0d6") format('woff'), url("bc-sf-filter-ico.svg?1fx0d6#icomoon") format('svg');
  font-weight: normal;
  font-style: normal;
}
@mixin icobcfont {
  /* use !important to prevent issues with browser extensions that change fonts */
  font-family: 'bc-sf-filter-ico' !important;
  speak: none;
  font-style: normal;
  font-weight: normal;
  font-variant: normal;
  text-transform: none;
  line-height: 1;
  /* Better Font Rendering =========== */
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}
// Color
$color-qv-bg: rgba(255,255,255,1);
$color-qv-bg-hover: rgba(61,66,70,1);
$color-qv-bd: rgba(255,255,255,1);
$color-qv-bd-hover: rgba(61,66,70,1);
$color-qv-text: rgba(61,66,70,1);
$color-qv-text-hover: rgba(255,255,255,1);
$color-atc-bg: rgba(34,34,34,0.9);
$color-atc-bg-hover: rgba(61,66,70,1);
$color-atc-bd: rgba(34,34,34,0.9);
$color-atc-bd-hover: rgba(61,66,70,1);
$color-atc-text: rgba(255,255,255,1);
$color-atc-text-hover: rgba(255,255,255,1);
$position-right: 0;
$size-height: 34px;
$size-line-height: $size-height - 2px;
.bc-quickview-btn {
  background: $color-qv-bg;
  color: $color-qv-text;
  border: 1px solid $color-qv-bd;
  &:hover {
    background: $color-qv-bg-hover;
    color: $color-qv-text-hover;
    border-color: $color-qv-bd-hover;
  }
}
.bc-addtocart-btn {
  background: $color-atc-bg;
  color: $color-atc-text;
  border: 1px solid $color-atc-bd;
  &:hover {
    background: $color-atc-bg-hover;
    color: $color-atc-text-hover;
    border-color: $color-atc-bd-hover;
  }
}
/* ==================================== */
.bc-addtocart-product-form,
.bc-quickview-btn-wrapper {
  display: inline-block;
  vertical-align: top;
  cursor: pointer;
  margin: 0;
}
.bc-addtocart-btn,
.bc-quickview-btn {
  -webkit-transition: all 0.3s ease-in-out;
  -moz-transition: all 0.3s ease-in-out;
  -ms-transition: all 0.3s ease-in-out;
  -o-transition: all 0.3s ease-in-out;
  transition: all 0.3s ease-in-out;
  display: inline-block;
  white-space: nowrap;
}
.bc-al-exist {
  .bc-al-overlay:before {
    content: "";
    background-color: transparent;
    width: 100%;
    height: 100%;
    position: absolute;
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
    z-index: 2;
    -webkit-transition: all 0.2s ease-in-out;
    -moz-transition: all 0.2s ease-in-out;
    -ms-transition: all 0.2s ease-in-out;
    -o-transition: all 0.2s ease-in-out;
    transition: all 0.2s ease-in-out;
  }
}
// STYLE
.bc-al-style-cirle {
  &.bc-qv-only-icon {
    .bc-quickview-btn {
      -webkit-border-radius: 100%;
      -moz-border-radius: 100%;
      border-radius: 100%;
    }
  }
  &.bc-atc-only-icon {
    .bc-addtocart-btn {
      -webkit-border-radius: 100%;
      -moz-border-radius: 100%;
      border-radius: 100%;
    }
  }
}
// RESPONSIVE ==============================
@media screen and (min-width: 1200px) {
  .bc-al-exist {
    position: relative;
    .bc-action-list-wrapper {
      position: absolute;
      z-index: 9;
      max-width: 100%;
    }
  }
}
// Tablet
@media (max-width: 1199px) {
  .bc-quickview-btn-wrapper {
    display: none !important;
  }
  .bc-al-exist {
    padding-bottom: 35px;
    .bc-action-list-wrapper {
      width: 100% !important;
    }
    .bc-addtocart-product-form {
      display: block;
    }
    .bc-addtocart-btn {
      width: 100%;
      border: 2px solid #3d4246 !important;
      background: none !important;
      padding: 0 5px;
      line-height: 30px;
      color: #3d4246 !important;
      font-weight: 400;
      letter-spacing: -0.14em;
      &:hover {
        background: #3d4246 !important;
        color: #fff !important;
      }
      @media (max-width: 320px) {
        font-size: 14px;
      }
    }
  }
}
.bc-al-exist .bc-addtocart-btn.bc-addtocart-sold-out {
  cursor: default;
  border-color: #bebebe !important;
  background-color: #bebebe !important;
  color: #fff !important;
}
.bc-atc-icon-text .bc-al-exist .bc-addtocart-btn.bc-addtocart-sold-out span:before {
  content: "" !important;
}
// ACTION LIB ===========================
.bc-action-list-wrapper {
  @media screen and (min-width: 1200px) {
    filter: alpha(opacity=0); // IE 5-7
    opacity: 0;
    -webkit-transition: all 0.3s ease-in-out;
    -moz-transition: all 0.3s ease-in-out;
    -ms-transition: all 0.3s ease-in-out;
    -o-transition: all 0.3s ease-in-out;
    transition: all 0.3s ease-in-out;
  }
}
.bc-al-exist {
  &:hover {
    .bc-action-list-wrapper {
      filter: alpha(opacity=100); // IE 5-7
      opacity: 1;
    }
  }
}
// BUTTON QUICKVIEW - ICON TEXT
.bc-qv-icon-text {
  @media screen and (min-width: 1200px) {
    .bc-quickview-btn {
      height: $size-height;
      line-height: $size-line-height;
      padding: 0 10px;
      display: inline-block;
      text-transform: uppercase;
      span {
        display: block;
        width: 100%;
        height: 100%;
        font-size: 12px;
        text-align: center;
        &:before {
          display: inline-block;
          @include icobcfont;
          content: "\e910";
          font-size: 16px;
          line-height: $size-line-height;
          font-weight: 300;
          margin-right: 10px;
          vertical-align: top;
        }
      }
    }
  }
}
// BUTTON CART - ICON TEXT
.bc-atc-icon-text {
  @media screen and (min-width: 1200px) {
    .bc-addtocart-btn {
      height: $size-height;
      line-height: $size-line-height;
      padding: 0;
      display: inline-block;
      text-transform: uppercase;
      span {
        display: block;
        width: 100%;
        height: 100%;
        font-size: 12px;
        text-align: center;
        &:before {
          display: inline-block;
          @include icobcfont;
          content: "\e911";
          font-size: 14px;
          line-height: $size-line-height;
          font-weight: 600;
          vertical-align: top;
          margin-right: 10px;
        }
      }
    }
  }
}
// BUTTON QUICKVIEW - ONLY ICON
.bc-qv-only-icon {
  @media screen and (min-width: 1200px) {
    .bc-quickview-btn {
      width: $size-height;
      height: $size-height;
      display: inline-block;
      vertical-align: top;
      span {
        display: block;
        width: 100%;
        height: 100%;
        font-size: 0;
        text-align: center;
        &:before {
          display: block;
          @include icobcfont;
          content: "\e910";
          font-size: 16px;
          line-height: $size-line-height;
          font-weight: 300;
        }
      }
    }
  }
}
// BUTTON CART - ONLY ICON
.bc-atc-only-icon {
  @media screen and (min-width: 1200px) {
    .bc-addtocart-btn {
      width: $size-height;
      height: $size-height;
      display: inline-block;
      vertical-align: top;
      span {
        display: block;
        width: 100%;
        height: 100%;
        font-size: 0;
        text-align: center;
        &:before {
          display: block;
          @include icobcfont;
          content: "\e911";
          font-size: 14px;
          line-height: $size-line-height;
          font-weight: 600;
        }
      }
    }
  }
}
// BUTTON QUICKVIEW - ONLY TEXT
.bc-qv-only-text {
  .bc-quickview-btn-wrapper + .bc-addtocart-product-form {
    display: block;
    text-align: center;
  }
  .bc-quickview-btn {
    height: $size-height;
    line-height: $size-line-height;
    padding: 0 15px;
  }
  &.bc-al-style-cirle {
    .bc-quickview-btn {
      -webkit-border-radius: 20px;
      -moz-border-radius: 20px;
      border-radius: 20px;
    }
  }
}
// BUTTON CART - ONLY TEXT
.bc-atc-only-text {
  @media screen and (min-width: 1200px) {
    .bc-addtocart-btn {
      height: $size-height;
      line-height: $size-line-height;
      padding: 0 15px;
      span {
        display: block;
        width: 100%;
        height: 100%;
        text-align: center;
        font-weight: 500;
      }
    }
    &.bc-al-style-cirle {
      .bc-addtocart-btn {
        -webkit-border-radius: 20px;
        -moz-border-radius: 20px;
        border-radius: 20px;
      }
    }
  }
}
// POSITION ============================================
// STYPE 1 - Bottom - Vertical - Right
@media screen and (min-width: 1200px) {
.bc-al-bottom-v {
  &.bc-qv-only-icon {
    .bc-addtocart-btn,
    .bc-quickview-btn {
      width: 40px;
      height: 40px;
      span:before {
        line-height: 38px;
      }
    }
  }
  .bc-action-list-wrapper {
    right: $position-right;
    left: auto !important;
    margin-top: -10px;
    .bc-addtocart-product-form,
    .bc-quickview-btn-wrapper {
      margin-top: 5px;
      display: block;
    }
    .bc-quickview-btn {}
    left: auto !important;
    right: $position-right;
    text-align: right;
    padding-right: 10px;
  }
  .bc-al-exist:hover .bc-al-overlay:before {
    background-color: rgba(0,0,0,0.15);
  }
}
// STYLE 2 - Bottom - horizontal - right
.bc-al-bottom-h {
  &.bc-al-only-icon {
    .bc-addtocart-btn,
    .bc-quickview-btn {
      width: 45px;
      height: 45px;
      span:before {
        line-height: 43px;
      }
    }
    .bc-quickview-btn-wrapper {
      text-align: right;
      + .bc-addtocart-product-form {
        .bc-addtocart-btn {
          border-left: none;
        }
      }
    }
    .bc-action-list-wrapper {
      left: auto !important;
      right: $position-right;
      text-align: right;
    }
  }
  .bc-al-exist:hover .bc-al-overlay:before {
    background-color: rgba(0,0,0,0.15);
  }
}
// STYPE 3 - Bottom - Horizontal - full
.bc-al-bottom-h-full {
  &.bc-addtocart-disabled {
    .bc-quickview-btn span {
      display: inline-block;
      font-size: inherit;
      line-height: 32px;
    }
    .bc-quickview-btn span:before {
      display: inline-block;
      vertical-align: top;
      margin-right: 10px;
    }
  }
  &.bc-quickview-disabled {
    .bc-addtocart-btn span {
      display: inline-block;
      font-size: inherit;
      line-height: 32px;
    }
    .bc-addtocart-btn span:before {
      display: inline-block;
      vertical-align: top;
      margin-right: 10px;
    }
  }
  &.bc-al-only-icon {
    .bc-action-list-wrapper {
      right: 0;
      width: 100%;
      &:before {
        content: "";
        position: absolute;
        left: 50%;
        top: 5px;
        background-color: $color-atc-bg;
        width: 1px;
        height: 30px;
        -webkit-transition: all 0.3s ease-in-out;
        -moz-transition: all 0.3s ease-in-out;
        -ms-transition: all 0.3s ease-in-out;
        -o-transition: all 0.3s ease-in-out;
        transition: all 0.3s ease-in-out;
      }
      &:hover:before {
        background-color: transparent;
      }
      .bc-quickview-btn-wrapper {
        border-right: none;
      }
      .bc-addtocart-product-form,
      .bc-quickview-btn-wrapper {
        width: 50%;
        display: block;
        float: left;
        box-sizing: content-box;
      }
    }
    .bc-addtocart-btn,
    .bc-quickview-btn {
      width: 100%;
      height: 34px;
      display: block;
      span:before {
        line-height: 32px;
      }
      border: none;
    }
    /* One Button */
    &.bc-al-only-one-component {
      .bc-action-list-wrapper {
        &:before {
          display: none;
        }
        .bc-addtocart-product-form,
        .bc-quickview-btn-wrapper {
          width: 100%;
        }
      }
    }
  }
}
// STYLE 4: BOTTOM FULL - ICON - TEXT
.bc-al-icon-text {
  &.bc-addtocart-disabled {
    .bc-quickview-btn span {
      display: inline-block;
      font-size: inherit;
      line-height: 32px;
    }
    .bc-quickview-btn span:before {
      display: inline-block;
      vertical-align: top;
      margin-right: 10px;
    }
  }
  &.bc-al-bottom-h-full {
    .bc-action-list-wrapper {
      padding-left: $position-right;
      padding-right: $position-right;
      .bc-addtocart-btn {
        @media screen and (max-width: 1199px) {
          padding-left: 5px;
          padding-right: 5px;
        }
      }
      text-align: center;
    }
    .bc-addtocart-product-form {
      width: calc(100% - #{$size-height + $position-right + $position-right});
      display: block;
      float: left;
      .bc-addtocart-btn {
        width: 100%;
      }
    }
    .bc-quickview-btn-wrapper {
      float: left;
    }
    /*One button */
    &.bc-al-only-one-component {
      .bc-addtocart-product-form {
        width: calc(100% - #{$position-right + $position-right});
      }
      .bc-quickview-btn,
      .bc-quickview-btn-wrapper {
        width: 100%;
      }
    }
  }
}
// STYLE 5 - STYLE 6 - POSITION MIDDLE ===
.bc-al-middle {
  .bc-action-list-wrapper {
    text-align: center;
  }
  &.bc-qv-icon-text {
    .bc-quickview-btn-wrapper {
      margin-bottom: 10px;
      display: block;
      .bc-quickview-btn {
        display: inline-block;
      }
    }
  }
  &.bc-al-only-icon {
    .bc-quickview-btn-wrapper {
      margin-right: 5px;
    }
    .bc-addtocart-btn,
    .bc-quickview-btn {
      width: 40px;
      height: 40px;
      span:before {
        line-height: 38px;
      }
    }
  }
  &.bc-qv-only-icon.bc-atc-icon-text {
    .bc-quickview-btn-wrapper {
      display: block;
      width: 100%;
      text-align: center;
      margin-bottom: 10px;
    }
  }
  &.bc-al-only-text {
    .bc-quickview-btn-wrapper + .bc-addtocart-product-form {
      margin-top: 10px;
    }
  }
  .bc-al-exist:hover .bc-al-overlay:before {
    background-color: rgba(0,0,0,0.15);
  }
}
}
// EFFECT ===================
.bc-al-effect-transition-bottom {
  @media screen and (min-width: 1200px) {
    .bc-al-exist {
      .bc-action-list-wrapper {
        -webkit-transition: transform 0.4s ease-out;
        -moz-transition: transform 0.4s ease-out;
        -ms-transition: transform 0.4s ease-out;
        -o-transition: transform 0.4s ease-out;
        transition: transform 0.4s ease-out;
        -webkit-transform: translate(0px, 10px);
        transform: translate(0px, 10px);
      }
      &:hover {
        .bc-action-list-wrapper {
          -webkit-transform: translate(0px, 0);
          transform: translate(0px, 0);
        }
      }
    }
  }
}
.bc-al-effect-transition-right {
  @media screen and (min-width: 1200px) {
    .bc-action-list-wrapper {
      -webkit-transition: right 0.3s ease-out;
      -moz-transition: right 0.3s ease-out;
      -ms-transition: right 0.3s ease-out;
      -o-transition: right 0.3s ease-out;
      transition: right 0.3s ease-out;
      right: $position-right - 20px !important;
    }
    .bc-al-exist {
      &:hover {
        .bc-action-list-wrapper {
          right: $position-right !important;
        }
      }
    }
  }
}
