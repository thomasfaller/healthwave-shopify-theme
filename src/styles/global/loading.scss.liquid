div.loading-overlay {
  position: fixed;
  left: 0px;
  top: 0px;
  width: 100%;
  height: 100%;
  z-index: 9999;
  background:
    url("https://res.cloudinary.com/djr6sgsbd/image/upload/v1538504383/hw_loading.gif") center no-repeat #fff;
}

div.registration-success {
  text-align: center;
  display: none;
  position: fixed;
  left: 0px;
  top: 0px;
  width: 100%;
  height: 100%;
  z-index: 9999;
  background: #fff;

  .wrapper {
    margin-top: 80px;
    #success-icon {
      display: block;
      color: $color-main-green;
      font-size: 150px;
    }

    p {
      @include text-regular;
    }

    button {
      @include button-regular-form;
    }
  }
}