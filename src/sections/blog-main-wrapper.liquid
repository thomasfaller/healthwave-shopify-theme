<div class="container">
  <div class="row">
    <div class="blog-main col-lg-9 row">
      {% include 'posts-grid' %}
    </div>
    <div class="blog-sidebar col-lg-3">
      {% if blog.all_tags.size > 0 %}
      <h2 class="mb-3">{{ 'blogs.general.categories' | t }}</h2>
      <div class="list-group">
        <a href="/blogs/health-hub" class="list-group-item
                list-group-item-action{% if current_url == canonical_url %} active{% endif %}">All</a>
        {% for tag in blog.all_tags %} {% if current_tags contains tag %} {{ tag | capitalize | link_to_tag: tag | replace: 'title=',
        'class="list-group-item list-group-item-action active" title=' }} {% else %} {{ tag | capitalize | link_to_tag: tag
        | replace: 'title=', 'class="list-group-item list-group-item-action" title=' }} {% endif %} {% endfor %}
      </div>
      {% endif %}
      <div class="mt-3">
        <h3 class="mb-3">Recent Posts</h3>
        {% for article in blogs.health-hub.articles limit: 4 %}
        <div class="mb-1 card">
          {% if article.image %}
          <a href="{{ article.url }}">
            {{ article | img_url: '512x' | img_tag: article.title | replace: 'alt=', 'class="card-img-top" alt=' }}
          </a>
          {% endif %}
          <div class="card-body">
            <h6 class="card-title">
              <a href="{{ article.url }}">{{ article.title }}</a>
            </h6>
          </div>
        </div>
        {% endfor %}
      </div>
    </div>
  </div>
</div>

{% schema %}
  {
    "name": "Section name",
    "settings": []
  }
{% endschema %}

