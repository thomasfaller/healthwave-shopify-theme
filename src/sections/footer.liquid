<footer class="shopify-section-{{ section.id }}">
  <div class="container">
  <div class="row">
    <section class="shopify-section-{{ section.id }}__column-contact col-md-6 col-lg-3">
      <ul>
        <li>
          <img
            alt="Healthwave Ltd logo"
            class="logo"
            src="{{ 'logo.png' | asset_img_url: 'large' | scale: 3 }}"
          >
        </li>
        <li><br></li>
        <li>
          <a class="contact-link"
            href="tel:+35316853086"
            title="Contact us today!">
            <i class="icon fa fa-phone fa-fw"></i> (01) 685 3086
          </a>
        </li>
        <li>
          <a class="contact-link"
            href="mailto:info@healthwave.ie"
            title="Contact us today!">
            <i
              class="icon far fa-envelope fa-fw"
              aria-hidden="true"
            ></i> info@healthwave.ie
          </a>
        </li>
        <li><br></li>
        <li class="column-item">
          <a href="https://goo.gl/maps/ATqLXudTmeo">
            <i class="fas fa-map-marked-alt"></i>
          </a>Unit 2.4 Dundrum Retail & Office Park, Sandyford Rd, Dundrum, Dublin 16
        </li>
        <li>
          <img
            alt="Pharmacy Society of Ireland logo"
            class="psi-logo"
            src="{{ 'PSI_Irish_Logo.jpg' | asset_img_url | scale: 3 }}"
          >
        </li>
      </ul>
      <div class="divider d-md-none">
    </section>
    <section class="shopify-section-{{ section.id }}__column-opening col-md-6 col-lg-3">
      <ul>
        <li>
          <span class="column-title">Opening Hours</span>
        </li>
        <li>
          <br>
        </li>
        <li class="column-item">Monday – Friday: 8am – 7pm</li>
        <li class="column-item">Saturday: 9am – 6pm</li>
        <li class="column-item">Sunday: 12pm – 6pm</li>
      </ul>
    </section>
    <section class="shopify-section-{{ section.id }}__column-social col-md-6 col-lg-2">
      <ul>
        <li>
          <span class="column-title">Social</span>
        </li>
        <li>
          <br>
        </li>
        <li class="column-item">
          <a href="https://www.facebook.com/shopify"
            title="Follow us on Facebook"
            target="_blank">
            <p class="d-none d-lg-inline">Facebook</p>
          </a>
        </li>
        <li class="column-item">
          <a href="https://twitter.com/shopify"
            title="Follow us on Twitter"
            target="_blank">
            <p class="column-item d-none d-lg-inline">Twitter</p>
          </a>
        </li>
        <li>
          <div class="d-lg-none">
            <span class="social-links">
              <a class="d-md-block"
                href="https://www.facebook.com/shopify"
                title="Follow us on Facebook"
                target="_blank">
                  <span class="shopify-social-icon-facebook-rounded">
                  </span>
              </a>
              <a class="d-md-block"
                href="https://twitter.com/shopify"
                title="Follow us on Twitter"
                target="_blank">
                  <span class="shopify-social-icon-twitter-rounded">
                  </span>
              </a>
            </span>
          </div>
        </li>
      </ul>
    </section>
    <section class="shopify-section-{{ section.id }}__column-legal col-md-6 col-lg-3">
      {%- assign footer_linklist = section.settings.footer_linklist -%}
      {% if linklists[footer_linklist].links.size > 0 %}
        <ul>
          <li>
            <span class="column-title">Legal</span>
          </li>
          <li>
            <br>
          </li>
          {% for link in linklists[footer_linklist].links %}
          <li class="column-item">
            <a href="{{ link.url }}">{{ link.title }}</a>
          </li>
          {% endfor %}
        </ul>
      {% endif %}
    </section>
  </div>
    <section class="shopify-section-{{ section.id }}__bottom">
    {% if section.settings.show_payment_icons %}
      {% unless shop.enabled_payment_types == empty %}
        <div class="payment-icons">
          <span class="methods-of-payment">
            <img src="{{ 'american_express' | payment_type_img_url }}" height="35" alt="american express" />
            <img src="{{ 'maestro' | payment_type_img_url }}" height="35" alt="maestro" />
            <img src="{{ 'master' | payment_type_img_url }}" height="35" alt="master" />
            <img src="{{ 'visa' | payment_type_img_url }}" height="35" alt="visa" />
          </span>
        </div>
      {% endunless %}
      {% endif %}
      <small>{{ 'layout.footer.copyright' | t }} &copy; {{ 'now' | date: "%Y" }}, {{ shop.name | link_to: '/' }}.<br> {{ powered_by_link
        }}</small>
    </section>
  </div>
</footer>

{% schema %}
  {
    "name": "Footer",
    "settings": [
      {
        "type": "link_list",
        "id": "footer_linklist",
        "label": "First menu",
        "default": "footer"
      },
      {
        "type": "checkbox",
        "id": "show_payment_icons",
        "label": "Show payment icons",
        "default": true
      }
    ]
  }

{% endschema %}
