{% schema %}
  {
    "name": "Home banner",
    "settings": [
      {
        "type": "text",
        "id": "banner_heading",
        "label": "Heading",
        "default": "Welcome to Healthwave"
      },
      {
        "type": "text",
        "id": "banner_text",
        "label": "Text",
        "default": "Over 15,000 people have switched to Healthwave for their prescription. See how much you can save by joining."
      },
      {
        "type": "radio",
        "id": "banner_btn_enabled",
        "label": "Button",
        "options": [
          {"value": "enabled", "label": "enabled"},
          {"value": "disabled", "label": "disabled"}
        ],
        "default": "enabled"
      },
      {
        "type": "text",
        "id": "banner_btn_text",
        "label": "Button text",
        "default": "Learn more"
      },
      {
        "type": "image_picker",
        "id": "banner_image",
        "label": "Banner image"
      },
      {
        "type": "range",
        "id": "banner_image_width",
        "min": 300,
        "max": 600,
        "step": 10,
        "unit": "px",
        "label": "Image width",
        "default": 500
      },
      {
        "type": "radio",
        "id": "layout",
        "label": "Image placement",
        "options": [
          {"value": "left", "label": "Image on the left"},
          {"value": "right", "label": "Image on the right"}
        ],
        "default": "right"
      }
    ]
  }

{% endschema %}

<div class="container">
  <div class="row">
    <div id="home-text" class="{{ section.id }}__main col-lg-7">
      <h1 class="{{ section.id }}__main__heading">{{ section.settings.banner_heading }}</h1>
      <p class="{{ section.id }}__main__text">{{ section.settings.banner_text }}</p>
      {% if section.settings.banner_btn_enabled == "enabled" %}
      <button class="{{ section.id }}__main__button btn">{{ section.settings.banner_btn_text }}</button>
      {% endif %}
    </div>
    <div class="{{ section.id }}__secondary col-lg-5">
      <img
        id="hand"
        class="{{ section.id }}__secondary__image"
        sizes="(min-width: 992px) 990px, (min-width: 500px) 490px, 200px"
        srcet="{{ 'pill-bottle-in-hand.jpg' | asset_img_url: '256x', scale: 3 }} 256w,
               {{ 'pill-bottle-in-hand.jpg' | asset_img_url: '768x', scale: 3 }} 768w,
               {{ 'pill-bottle-in-hand.jpg' | asset_img_url: '512x', scale: 3 }} 512w,
               {{ 'pill-bottle-in-hand.jpg' | asset_img_url: '1024x', scale: 3 }} 1024w,
               {{ 'pill-bottle-in-hand.jpg' | asset_img_url: '1280x', scale: 3 }} 1280w"
        src="{{ 'pill-bottle-in-hand.jpg' | asset_img_url: '512x', scale: 3 }}"
      />
    </div>
  </div>
</div>

