{% paginate collection.products by 12 %}

<div id="collection-main">
  <form
    action="{{ collection.url }}{% if current_tags %}/{{ current_tags | join: '+' }}{% endif %}" 
    id="collection-form"
    data-submit-load="#collection-main"
    rel="noopener noreferrer"
  >
    {%- section 'page-title' -%}
    <div class="container">
      <div class="mt-4 row">
        <aside class="col-md-3">
        <noscript>
          {% section 'collection-sidebar' %}
        </noscript>
          {% section 'collection-sidebar-plugin' %}
        </aside>
        <main class="col-md-9">
          <div class="container">
            <section class="row">
                {% for product in collection.products %}
                  <div class="col-6 col-md-4 col-lg-3">
                    <div class="product-thumbnail">
                      <a href="{{ product.url | within: collection }}">
                        <img
                          class="lazyload"
                          src="{{ product.featured_image | img_url: '300x300' }}"
                          data-src="{{ img_url }}"
                          data-widths="[180, 360, 540, 720, 900, 1080, 1296, 1512, 1728, 2048]"
                          data-aspectratio="{{ featured.featured_image.aspect_ratio }}"
                          data-sizes="auto"
                          alt="{{ product.featured_image.alt | escape }}">
                      </a>
                      <h6 class="mt-2">{{ product.title | escape }}</h6>
                      <p class="text-muted">{{ product.price | money }}</p>
                    </div>
                  </div>
                {% endfor %}
              <div id="bc-sf-filter-bottom-pagination"></div>
            </section>
          </div>
        </main>
      </div>
    </div>
  </form>
</div>

{% endpaginate %}



