<div class="grid__item one-quarter text-center">
    <a href="{{ product.url }}">
        <img src="{{ product.featured_image | product_img_url: '400x400', scale: 2, crop: 'center' }}" class="img-fluid" alt="{{ product.title | escape }}"
        />
    </a>
    <h6 class="mt-2">{{ product.title | escape }}</h6>
    <p class="text-muted">{{ product.price | money }}</p>
</div>
